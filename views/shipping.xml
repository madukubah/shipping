<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shipping_shipping_list" model="ir.ui.view">
        <field name="name">shipping_shipping_list</field>
        <field name="model">shipping.shipping</field>
        <field name="type">tree</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Shipping List">
                <field name="name" />
                <field name="barge_id" />
                <field name="depart_date" />
                <field name="discharging_port" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_shipping_shipping_form" model="ir.ui.view">
            <field name="name">shipping.shipping.form</field>
            <field name="model">shipping.shipping</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Shipping">
                    <header>
                        <button name="button_cancel" string="Set to Draft" type="object" states="approve" class="btn-primary"  />
                        <button name="button_approve" string="Approve" type="object" states="draft" class="btn-primary"  />
                        <button name="button_done" string="Done" type="object" states="approve" class="btn-primary"  />
                        <field name="state" widget="statusbar" statusbar_visible="draft,approve,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Shipping Name" ></label>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <field name="barge_id" />
                            <field name="sale_contract_id" />
                            <field name="quantity" />
                        </group>
                        
                        <group class="oe_title">
                            <label for="depart_date" string="Date" ></label>
                            <group>
                                <field name="depart_date" />
                            </group>
                            <group>
                                <field name="arrive_date" />
                            </group>
                        </group>

                        <group class="oe_title">
                            <label for="loading_port" string="Port" ></label>
                            <group>
                                <field name="loading_port" />
                            </group>
                            <group>
                                <field name="discharging_port" />
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
    </record>
</odoo>
